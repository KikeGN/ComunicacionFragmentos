<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kikebmx.practicafragmentos.MainActivity">


    <Button
        android:id="@+id/btnHardcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:onClick="btnHardcode_click"
        android:text="@string/fragmento_hardcode_xml"
        android:textColor="@android:color/background_light" />
    <Button
        android:id="@+id/btnDinamico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:onClick="btnDinamico_click"
        android:text="@string/fragmento_dinamico"
        android:textColor="@android:color/background_light" />

    <FrameLayout
        android:id="@+id/contenedor_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

</LinearLayout>





